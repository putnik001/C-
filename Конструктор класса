User masin = new User("Dodge", "Dodge Charger HellCat", 2015, "Черный");
Console.WriteLine($"Марка: {masin.marka} \nМодель: {masin.model} \nГод: {masin.age} \nЦвет: {masin.color}");

class User
{
    public string marka;
    public string model;
    public int age;
    public string color;

    public User(string newMarka, string newModel, int newAge, string newColor)
    {
        marka = newMarka;
        model = newModel;
        age = newAge;
        color = newColor;
    }
}
